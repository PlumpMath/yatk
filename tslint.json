{
  "extends": [
    // https://github.com/palantir/tslint/blob/master/src/configs/recommended.ts
    "tslint:recommended",
    "tslint-eslint-rules"
  ],
  "rulesDirectory": [
    "node_modules/tslint-origin-ordered-imports-rule/dist"
  ],

  "defaultSeverity": "warning",

  // https://palantir.github.io/tslint/rules/
  "rules": {
    "no-console": [false],
    "curly": [
      true,
      "ignore-same-line"
    ],
    "indent": [
      true,
      "tabs",
      4
    ],
    "semicolon": [
      true,
      "never"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "avoid-template"
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "max-line-length": [
      true,
      160
    ],
    "member-access": [
      true,
      "no-public"
    ],
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "static-method",
          "constructor",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method"
        ]
      }
    ],
    "no-empty-interface": false,
    "no-namespace": false,
    "no-unused-expression": [
      true,
      "allow-fast-null-checks"
    ],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ],

    // https://github.com/marcuzy/tslint-origin-ordered-imports-rule
    "origin-ordered-imports": true,

    // https://github.com/buzinas/tslint-eslint-rules
    "object-curly-spacing": [
      true,
      "always"
    ]
  }
}
